
.home_category{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-flex-wrap: wrap;
	        flex-wrap: wrap;
}
.cate_item{
	width: 33.33%;
	position: relative;
	border: 5rpx solid #fff;
}
.cate_img{
	height: 240rpx;
}
.cate_name{
	position: absolute;
	left: 0;
	bottom: 0;
	color: #fff;
	background-image:-webkit-gradient(linear,left bottom, right top,from(rgba(0,0,0,.2)), to(rgba(0,0,0,0))) ;
	background-image:-webkit-linear-gradient(left bottom,rgba(0,0,0,.2), rgba(0,0,0,0)) ;
	background-image:linear-gradient(to right top,rgba(0,0,0,.2), rgba(0,0,0,0)) ;
	width: 100%;
	height: 50rpx;
	font-size: 40rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	padding-left: 20rpx;
}


