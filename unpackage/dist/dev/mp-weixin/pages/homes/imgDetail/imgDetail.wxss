
.user_info{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	padding: 20rpx;
}
..user_icon{
	padding: 0 20rpx;
}
.user_icon image{
	width: 88rpx;
	-webkit-border-radius: 50%;
	        border-radius: 50%;
}
.user_desc{
	margin-left: 20rpx;
}
.user_name{
	color: #000;
	font-weight: 600;
}
.user_time{
	color: #ccc;
	font-size: 24rpx;
	padding: 10rpx 0;
}
.user_rank{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	height: 80rpx;
	border-bottom: 5rpx solid #eee;
}
