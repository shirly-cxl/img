/* 专辑 */
.album_wrap{
	padding: 20rpx;
}
.album_title{
	padding: 10rpx 0;
}
.album_item{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	padding: 10rpx 0;
	border-bottom: 4rpx solid #eee;
}
.album_cover{
	-webkit-box-flex:1;
	-webkit-flex:1;
	        flex:1;
}
.album_cover image{
	width: 180rpx;
	height: 180rpx;
}
.album_info{
	-webkit-box-flex:3;
	-webkit-flex:3;
	        flex:3;
	padding-left: 20rpx;
	position: relative;
}
.album_text{
	width: 100rpx;
	height: 50rpx;
	background-color:#d52a7e;
	color: #fff;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.album_name{
	padding: 10rpx 0;
	color: #888;
}
.img{
	position: absolute;
	top: 50%;
	right: 10%;
	-webkit-transform: translateY(-50%);
	        transform: translateY(-50%);
}

